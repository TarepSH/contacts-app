<div class="row">

<div class="col-md-3 center-block">
<div class="margin-left ">
      <img class="img-responsive img-circle user_icon center-block" src="<%= asset_path('user_icon') %>" alt="">
         <ul class="nav nav-pills nav-stacked">

            <li>
              <p class="text-center center-block"><%= current_user.email %></p>
            </li>
            <li>
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Search">
                </div>
            </li>

            <li>
            <a href="">Contacts <span class="badge"><%= @user.contacts.size %></span></a>
            </li>
            <li>
            <%= menu_item "Add new Contacts", new_user_contact_path(@current_user.id) %>
            </li>
             <li>
              <%= menu_item "Log Out", destroy_user_session_path, :method => :delete %> 
           </li>
          </ul>
        </div>
</div>

<div class="center-block text-center">
<div class="col-md-8 col-xs-12">
<div class="panel panel-danger">
  <!-- Default panel contents -->
  <div class="panel-heading">CONTACTS</div>
  <!-- Table -->
  <div class="table-responsive">
<table class="table table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>Company</th>
      <th>Address</th>
      <th>phone</th>
      <th>Birthday</th>
    </tr>
  </thead>
  <tbody>

    <% @contacts.each_with_index do |contact, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= contact.name %></td>
        <td><%= contact.email%></td>
        <td><%= contact.company %></td>
        <td><%= contact.address %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.birthday %>/3</td>
      </tr>
    <% end %>

  </tbody>
</table>
</div>
<br>
</div>

</div>

</div>
</div>